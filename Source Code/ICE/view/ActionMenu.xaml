<UserControl x:Class="ICE.view.ActionMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="300" Height="300" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="#FF0B0B0B" BorderThickness="67,5,5,5" xmlns:ICE_view="clr-namespace:ICE.view">
    <UserControl.Resources>
        <Storyboard x:Name="openingStoryboard" Completed="OpeningStoryboard_Completed">
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="cilclePanel" Storyboard.TargetProperty="Diameter">
                <SplineDoubleKeyFrame KeyTime="00:00:00.0000000" Value="0"/>
                <SplineDoubleKeyFrame KeyTime="00:00:00.8000000" Value="140"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="cilclePanel" Storyboard.TargetProperty="Scale">
                <SplineDoubleKeyFrame KeyTime="00:00:00.0000000" Value="0"/>
                <SplineDoubleKeyFrame KeyTime="00:00:00.8000000" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="cilclePanel" Storyboard.TargetProperty="StartAngle">
                <SplineDoubleKeyFrame KeyTime="00:00:00.0000000" Value="0"/>
                <SplineDoubleKeyFrame KeyTime="00:00:00.8000000" Value="360"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Name="closingStoryboard" Completed="ClosingStoryboard_Completed">
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="cilclePanel" Storyboard.TargetProperty="Diameter">
                <SplineDoubleKeyFrame KeyTime="00:00:00.0000000" Value="140"/>
                <SplineDoubleKeyFrame KeyTime="00:00:00.8000000" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="cilclePanel" Storyboard.TargetProperty="Scale">
                <SplineDoubleKeyFrame KeyTime="00:00:00.0000000" Value="1"/>
                <SplineDoubleKeyFrame KeyTime="00:00:00.8000000" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="cilclePanel" Storyboard.TargetProperty="StartAngle">
                <SplineDoubleKeyFrame KeyTime="00:00:00.0000000" Value="0"/>
                <SplineDoubleKeyFrame KeyTime="00:00:00.8000000" Value="360"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Name="openedStoryboard" Completed="OpenedStoryboard_Completed">
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="cilclePanel" Storyboard.TargetProperty="StartAngle">
                <SplineDoubleKeyFrame KeyTime="00:00:00.0000000" Value="0"/>
                <SplineDoubleKeyFrame KeyTime="00:00:35.0000000" Value="360"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </UserControl.Resources>
	<Grid x:Name="LayoutRoot">
		<ICE_view:CirclePanel x:Name="cilclePanel" Diameter="0" Width="300" Height="300"/>
	</Grid>
</UserControl>
