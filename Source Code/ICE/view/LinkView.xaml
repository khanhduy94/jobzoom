<UserControl x:Class="ICE.view.LinkView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid x:Name="container" Cursor="Hand">
        <ToolTipService.ToolTip>
            <ToolTip x:Name="tooltip" Content="..."/>
        </ToolTipService.ToolTip>
        <Line x:Name="line" X1="0" Y1="0" X2="20" Y2="20" Stroke="Black" StrokeThickness="4" Fill="{x:Null}"/>
    </Grid>
</UserControl>
