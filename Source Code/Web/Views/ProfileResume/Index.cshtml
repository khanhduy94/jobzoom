@model JobZoom.Web.Models.ResumeViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    // increase the default animation speed to exaggerate the effect
    var educationexpid = $("#hidden-educationexpid").attr("educationexpid");
    $.fx.speeds._default = 1000;
    $(function () {
        $("#education-dialog").dialog({
            autoOpen: false,
            height: 600,
            width: 700,
            show: "blind",
            hide: "explode",
            buttons: {
                "Save": function () {
                    $.post("/Employer/Job/Edit/SaveEducation",
                        $("#EditEducationExpView").serialize(),
                        function (data) {
                            $("#education-dialog").dialog("close");
                            $("#divEducationExpList").html(data);
                        });
                },
                Cancel: function () {
                    $(this).dialog("close");
                }
            }
        });

        $("#create-education").click(function () {
            $("#education-dialog").html("")
                .dialog("option", "title", "Create Education")
                .load("/Employer/Job/Edit/CreateEducation/" + educationexpid, function () { $("#education-dialog").dialog("open"); });
        });
        $(".edit-education").live("click", function () {
            var id = $(this).attr("profileeducationid");
            $("#education-dialog").html("")
                .dialog("option", "title", "Edit Work")
                .load("/Employer/Job/Edit/EditEducation/" + id, function () { $("#education-dialog").dialog("open"); });
        });
        LoadProfileWorkList();

        $("#graph-dialog").dialog({
            autoOpen: false,
            height: 700,
            width: 900,
            show: "blind"
        });
        $("#view-graph").click(function () {
            $("#graph-dialog").html("")
                .dialog("option", "title", "Create Education")
                .load("/Employer/Job/Edit/CreateGraph/" + "76391aec-eaa5-4c71-b9be-ebaaf1bf1735", function () { $("#graph-dialog").dialog("open"); });
        });
        $(".edit-graph").live("click", function () {
            var id = $(this).attr("jobid");
            $("#graph-dialog").html("")
                .dialog("option", "title", "Edit Work")
                .load("/Profile/Resume/CreateDecisionTreeGraph/" + id, function () { $("#graph-dialog").dialog("open"); });
        });

    });
    function LoadProfileWorkList() {
        $("#divEducationExpList").load("/Employer/Job/Edit/ListEducations/" + educationexpid);
    }
</script>
