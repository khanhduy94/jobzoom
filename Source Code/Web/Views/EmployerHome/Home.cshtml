@model IEnumerable<JobZoom.Business.Entities.Job_Posting>

@{
    ViewBag.Title = "Home";
}

<h2>Home</h2>

<p>
    @Html.ActionLink("Posting Job", "Basic", "EmployerJobPost")
</p>
<table>
    <tr>
        <th>
            UserId
        </th>
        <th>
            CompanyId
        </th>
        <th>
            CompanyName
        </th>
        <th>
            JobTitle
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobTitle)
        </td>
        <td>
            @Html.ActionLink("Edit", "Basic", "EmployerEditJob", new { id = item.JobPostingId }, null) |
            @Html.ActionLink("Details", "Details", new { id=item.JobPostingId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.JobPostingId })
        </td>
    </tr>
}

</table>
