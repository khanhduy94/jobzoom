@model JobZoom.Web.Models.JobViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Job</h2>
<fieldset>
    <legend>Job details</legend>
    <div class="display-label" style="font-size: medium; font-weight: bold">@Html.DisplayFor(model => model.Job_Posting.JobTitle)</div>
    <div class="display-label">
        at @Html.DisplayFor(model => model.Job_Posting.CompanyName)</div>
    @*<div class="display-label">Job description: @Html.DisplayFor(model => model.JobDescription)</div>*@
</fieldset>
<table>
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Birthdate
        </th>
        <th>
            Mobile phone
        </th>
        <th>
        
        </th>
    </tr>
    @foreach (var item in Model.ApplyList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobilePhone)
            </td>
            <td>
                @Html.ActionLink("View", "Profile", "View", new { id = item.ProfileBasicId }, null)
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Edit", "Basic", "EmployerEditJob", new { id = Model.Job_Posting.JobPostingId }, null)
    |
    @Html.ActionLink("Back to List", "Home")
</p>
